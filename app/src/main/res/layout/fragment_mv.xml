<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_RootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_second">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_home_logo"
            android:layout_width="269dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp"
            android:layout_marginRight="75dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logo_index"/>
        <ImageView
            android:id="@+id/fra_had_left"
            style="@style/setEnableFocusNO"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginTop="385dp"
            android:background="@drawable/had_left"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/fra_had_right"
            style="@style/setEnableFocusNO"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1220dp"
            android:layout_marginTop="385dp"
            android:background="@drawable/had_right"
            android:visibility="visible"/>
    </RelativeLayout>

