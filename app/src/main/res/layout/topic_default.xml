<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <SurfaceView
        android:id="@+id/sv_video"
        style="@style/setEnableFocusNO"
        android:layout_width="@dimen/dp600"
        android:layout_height="@dimen/dp350"
        android:layout_marginLeft="@dimen/dp70"
        android:layout_marginTop="@dimen/dp100"
        android:background="@color/transparent"
        android:visibility="gone" />

    <com.utvgo.huya.views.CustomVideoView
        android:id="@+id/video"
        style="@style/setEnableFocusNO"
        android:layout_width="@dimen/dp600"
        android:layout_height="@dimen/dp350"
        android:layout_marginLeft="@dimen/dp70"
        android:layout_marginTop="@dimen/dp100"
        android:background="@color/transparent"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/ll_bg"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_bg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/iv_bg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/iv_bg3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_weight="1"/>

    </LinearLayout>

    <com.utvgo.huya.views.SmoothHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/fl_topic_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_video_focus"
                style="@style/focusAndSetTag"
                android:layout_width="100dp"
                android:layout_height="@dimen/dp460"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="@dimen/dp85"
                android:visibility="gone" />

        </FrameLayout>
    </com.utvgo.huya.views.SmoothHorizontalScrollView>


</FrameLayout>