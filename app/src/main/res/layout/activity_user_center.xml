<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_RootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_user_center">

    <ImageView
        android:id="@+id/iv_home_logo"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/logo"/>

    <LinearLayout
        android:id="@+id/ll_userInfo"
        android:layout_width="308dp"
        android:layout_height="203dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/user_center_info"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_userName"
            style="@style/setEnableFocusNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="户 主 ："
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/tv_keyNo"
            style="@style/setEnableFocusNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="left"
            android:text="卡 号 ："
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/tv_area"
            style="@style/setEnableFocusNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="地 区 ："
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_orderState"
                style="@style/setEnableFocusNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="left"
                android:text="订购状态：未订购"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_order"
            android:layout_width="308dp"
            android:layout_height="93dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="100dp"
            android:layout_marginRight="80dp"
            style="@style/focusAndSetTag"
            android:onClick="onClick"
            android:background="@drawable/btn_order_focus" />
        <Button
            android:id="@+id/btn_playRecord"
            android:layout_width="308dp"
            android:layout_height="93dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="208dp"
            android:layout_marginRight="80dp"
            style="@style/focusAndSetTag"
            android:onClick="onClick"
            android:background="@drawable/btn_history_focus" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="974dp"
        android:layout_height="246dp"
        android:layout_marginLeft="239dp"
        android:layout_marginTop="450dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_view0"
            style="@style/focusAndSetTag"
            android:layout_width="450dp"
            android:layout_height="213dp"
            android:background="@drawable/selector_user_center_favorite"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/btn_view1"
            style="@style/focusAndSetTag"
            android:layout_width="184dp"
            android:layout_height="213dp"
            android:layout_marginLeft="470dp"
            android:background="@drawable/selector_user_center_favorite"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/btn_view2"
            style="@style/focusAndSetTag"
            android:layout_width="184dp"
            android:layout_height="213dp"
            android:layout_marginLeft="678dp"
            android:background="@drawable/selector_user_center_favorite"
            android:scaleType="fitXY" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_version"
        style="@style/setEnableFocusNO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:gravity="right"
        android:padding="@dimen/dp50"
        android:text="版本号"
        android:textColor="@color/white"
        android:textSize="@dimen/sp20" />
    <com.utvgo.huya.utils.FocusView
        android:id="@+id/focusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>