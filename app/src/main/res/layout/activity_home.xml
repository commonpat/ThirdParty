<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_RootView">
    <SurfaceView
        android:id="@+id/sv_video"
        style="@style/setEnableFocusNO"
        android:layout_width="544dp"
        android:layout_height="304dp"
        android:layout_marginLeft="273dp"
        android:layout_marginTop="60dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/home_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/home_bg"/>

    <ImageView
        android:id="@+id/iv_home_logo"
        android:layout_width="269dp"
        android:layout_height="62dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitStart"
        android:visibility="gone"
        android:src="@drawable/logo" />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="820dp"
                  android:layout_marginTop="40dp"
                  android:orientation="horizontal">
        <Button android:layout_width="98dp"
                android:layout_height="42dp"
                android:onClick="onClick"
                android:id="@+id/btn_main_order"
                android:background="@drawable/selector_main_btn_order"/>
        <Button android:layout_width="98dp"
                android:layout_height="42dp"
                android:onClick="onClick"
                android:id="@+id/btn_main_user_favor"
                android:background="@drawable/selector_main_btn_favor"/>
        <Button android:layout_width="98dp"
                android:layout_height="42dp"
                android:onClick="onClick"
                android:id="@+id/btn_main_user_center"
                android:background="@drawable/selector_main_btn_personal"/>
        <Button android:layout_width="126dp"
                android:layout_height="42dp"
                android:onClick="onClick"
                android:id="@+id/btn_main_introduction"
                android:background="@drawable/selector_main_btn_introduction"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="100dp">
        <Button style="@style/MainNav"
            android:onClick="onClick"
            android:id="@+id/btn_tab_0"
            android:background="@drawable/nav_bg0" />
        <Button style="@style/MainNav"
            android:onClick="onClick"
            android:id="@+id/btn_tab_1"
            android:background="@drawable/nav_bg1"/>
        <Button style="@style/MainNav"
                android:onClick="onClick"
                android:id="@+id/btn_tab_2"
                android:background="@drawable/nav_bg2" />
        <Button style="@style/MainNav"
                android:onClick="onClick"
                android:id="@+id/btn_tab_3"
                android:background="@drawable/nav_bg3"/>
        <Button style="@style/MainNav"
                android:onClick="onClick"
                android:id="@+id/btn_tab_4"
                android:background="@drawable/nav_bg4"/>
        <Button style="@style/MainNav"
                android:onClick="onClick"
                android:id="@+id/btn_tab_5"
                android:background="@drawable/nav_bg5"
                android:nextFocusDown="@+id/btn_fl_5"/>
    </LinearLayout>



    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp100"
        android:paddingTop="@dimen/dp15">

        <RelativeLayout
            android:layout_width="540dp"
            android:layout_height="300dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="62dp"
            android:background="@color/transparent">

            <com.utvgo.handsome.views.CustomVideoView
                android:id="@+id/vv_small"
                style="@style/setEnableFocusNO"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_fl_video"
            android:layout_width="544dp"
            android:layout_height="304dp"
            android:layout_marginLeft="273dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/selector_common_button"
            android:nextFocusRight="@+id/btn_fl_5"
            android:onClick="onClick"
        />

        <RelativeLayout android:layout_width="170dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="62dp">
