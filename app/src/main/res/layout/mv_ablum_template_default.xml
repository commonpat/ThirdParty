<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_mv_ablum">


    <SurfaceView
        android:id="@+id/sv_video"
        style="@style/setEnableFocusNO"
        android:layout_width="@dimen/dp800"
        android:layout_height="@dimen/dp600"
        android:layout_marginBottom="@dimen/dp100"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginTop="@dimen/dp100"
        android:background="@color/transparent"
        android:visibility="gone" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <com.utvgo.huya.views.CustomVideoView
            android:id="@+id/video"
            style="@style/setEnableFocusNO"
            android:layout_width="821dp"
            android:layout_height="461dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="83dp"
            android:background="@color/transparent" />
    </FrameLayout>
    <ImageView
        android:id="@+id/iv_video_focus"
        style="@style/focusAndSetTag"
        android:layout_width="821dp"
        android:layout_height="461dp"
        android:layout_marginLeft="@dimen/dp230"
        android:layout_marginTop="83dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_mv_ablum" />

    <TextView
        android:id="@+id/tv_ablum_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp28"
        android:layout_marginTop="@dimen/dp38"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_mv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:maxWidth="@dimen/dp600"
        android:layout_marginBottom="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp28"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="22sp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp1060"
        android:layout_marginTop="@dimen/dp30"
        android:src="@drawable/logo" />



    <ImageView
        android:id="@+id/iv_collect"
        style="@style/setEnableFocusNO"
        android:layout_width="@dimen/dp310"
        android:layout_height="@dimen/dp58"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp633" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp240"
            android:layout_marginLeft="@dimen/dp230"
            android:layout_marginTop="@dimen/dp560"
            android:background="@color/transparent">

            <RelativeLayout
                android:onClick="onClick"
                android:layout_width="@dimen/dp193"
                android:layout_height="@dimen/dp109"
                android:orientation="horizontal"
                style="@style/focusAndSetTag"
                android:id="@+id/rl_item1">

                <ImageView
                    android:id="@+id/iv_icon1"
                    android:layout_width="@dimen/dp193"
                    android:layout_height="@dimen/dp109"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_name1"
                    android:layout_width="@dimen/dp193"
                    android:layout_height="@dimen/dp40"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="名字"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp10"
                    android:background="@color/fourty_black"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:onClick="onClick"
                android:layout_width="@dimen/dp193"
                android:layout_height="@dimen/dp109"
                android:orientation="horizontal"
                style="@style/focusAndSetTag"
                android:layout_marginLeft="211dp"
                android:id="@+id/rl_item2">

                <ImageView
                    android:id="@+id/iv_icon2"
                    android:layout_width="@dimen/dp193"
                    android:layout_height="@dimen/dp109"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_name2"
                    android:layout_width="@dimen/dp193"
                    android:layout_height="@dimen/dp40"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="名字"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp10"
                    android:background="@color/fourty_black"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:onClick="onClick"
                android:layout_width="@dimen/dp193"
                android:layout_height="@dimen/dp109"
                android:orientation="horizontal"
                style="@style/focusAndSetTag"
                android:layout_marginLeft="422dp"
                android:id="@+id/rl_item3">

                <ImageView
                    android:id="@+id/iv_icon3"
                    android:layout_width="@dimen/dp193"
                    android:layout_height="@dimen/dp109"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_name3"
                    android:layout_width="@dimen/dp193"
                    android:layout_height="@dimen/dp40"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="名字"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp10"
                    android:background="@color/fourty_black"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item4"
                android:layout_width="@dimen/dp193"
                android:layout_height="@dimen/dp109"
                android:orientation="horizontal"
                style="@style/focusAndSetTag"
                android:layout_marginLeft="@dimen/dp633"
                android:onClick="onClick">

                <ImageView
                    android:id="@+id/iv_icon4"
                    android:layout_width="@dimen/dp193"
                    android:layout_height="@dimen/dp109"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_name4"
                    android:layout_width="@dimen/dp193"
                    android:layout_height="@dimen/dp40"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="名字"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp10"
                    android:background="@color/fourty_black"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="@dimen/dp193"
        android:layout_height="@dimen/dp40"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="1/4"
        android:gravity="center"
        android:maxLines="1"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/dp60" />
</FrameLayout>