<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exitRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_second" />

    <ImageView
        android:id="@+id/iv_img0"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/default_small"
        android:scaleType="fitXY"
        style="@style/setEnableFocusYES"
        />
    <ImageView
        android:id="@+id/iv_img1"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="190dp"
        android:src="@drawable/default_small"
        android:scaleType="fitXY"
        style="@style/setEnableFocusYES"
        />
    <ImageView
        android:id="@+id/iv_img2"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="340dp"
        android:src="@drawable/default_small"
        android:scaleType="fitXY"
        style="@style/setEnableFocusYES"
        />
    <ImageView
        android:id="@+id/iv_img3"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="490dp"
        android:src="@drawable/default_small"
        android:scaleType="fitXY"
        style="@style/setEnableFocusYES"
        />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dp150"
        android:layout_height="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp720"
        android:layout_marginTop="@dimen/dp550"
        android:background="@drawable/change_button_lock_bg_select1"
        android:gravity="center"
        android:textColor="@drawable/selector_item_text_color_for_focus"
        android:textSize="@dimen/sp20" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="@dimen/dp150"
        android:layout_height="@dimen/dp60"
        android:layout_marginLeft="900dp"
        android:layout_marginTop="@dimen/dp550"
        android:background="@drawable/change_button_lock_bg_select"
        android:gravity="center"
        android:textColor="@drawable/selector_item_text_color_for_focus"
        android:textSize="@dimen/sp20" />
    <com.utvgo.huya.views.FocusView
        android:id="@+id/focusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>