<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_RootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <TextView
        android:id="@+id/tv_title"
        style="@style/setEnableFocusNO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp100"
        android:text="我的收藏"
        android:textColor="@color/white"
        android:textSize="@dimen/sp45" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/iv_mv"
            style="@style/focusAndSetTag"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp270"
            android:layout_marginLeft="@dimen/dp200"
            android:layout_marginTop="@dimen/dp230"
            android:background="@drawable/mv50" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MV"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/dp80"
                android:textSize="@dimen/sp25"/>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/iv_vocal"
            style="@style/focusAndSetTag"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp270"
            android:layout_marginLeft="@dimen/dp425"
            android:layout_marginTop="@dimen/dp230"
            android:background="@drawable/vocal50" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="演唱会"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/dp80"
                android:textSize="@dimen/sp25"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/iv_song"
            style="@style/focusAndSetTag"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp270"
            android:layout_marginLeft="@dimen/dp650"
            android:layout_marginTop="@dimen/dp230"
            android:background="@drawable/song50" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单曲"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/dp80"
                android:textSize="@dimen/sp25"/>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/iv_album"
            style="@style/focusAndSetTag"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp270"
            android:layout_marginLeft="@dimen/dp875"
            android:layout_marginTop="@dimen/dp230"
            android:background="@drawable/album50"
            android:scaleType="fitXY"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专辑"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/dp80"
                android:textSize="@dimen/sp25"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>