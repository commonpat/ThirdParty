        <activity android:name=".activity.TopicActivity" />
        <activity android:name=".activity.MVListActivity" />
        <activity android:name=".activity.PlayVideoActivity" />
        <activity android:name=".activity.IntroduceActivity" />
        <activity android:name=".activity.UserCenterActivity" />
        <activity android:name=".activity.CollectCenterActivity" />
        <activity android:name=".activity.ExitActivity" />
    </application>

</manifest>